################################################################################
# Modbus Monitor - Environment Configuration Example
#
# Copy this file to .env and update with your actual settings:
#   cp .env.example .env
#
# This file contains all available configuration options with defaults.
# Only uncomment and modify the settings you need.
################################################################################

# ============================================================================
# MODBUS CONNECTION SETTINGS
# ============================================================================

# Modbus Host (IP address or hostname)
# Examples: 192.168.1.100, modbus.example.com, localhost
MODBUS_HOST=localhost

# Modbus Port (TCP: default 502, RTU: serial port)
# TCP: 502, 5020-5025 (common alternatives)
# RTU: COM1, COM3, /dev/ttyUSB0, /dev/ttyACM0
MODBUS_PORT=502

# Modbus Connection Type: tcp or rtu
MODBUS_TYPE=tcp

# Modbus Unit ID (Slave ID for RTU, function code for TCP)
# Typical range: 0-255, default: 1
MODBUS_UNIT_ID=1

# Modbus Read Timeout (seconds)
MODBUS_TIMEOUT=2

# Modbus Reconnect Delay (seconds)
MODBUS_RECONNECT_DELAY=5

# Start Register Address (0-based indexing)
MODBUS_START_ADDRESS=0

# Number of Registers to Read per Request
MODBUS_READ_COUNT=10

# Modbus Read Interval (seconds)
MODBUS_READ_INTERVAL=1

# RTU Specific Settings (when MODBUS_TYPE=rtu)
MODBUS_RTU_BAUDRATE=9600  # 9600, 19200, 38400, 115200
MODBUS_RTU_PARITY=N       # N (None), O (Odd), E (Even)
MODBUS_RTU_STOPBITS=1     # 1 or 2
MODBUS_RTU_BYTESIZE=8     # 7 or 8

# ============================================================================
# FLASK WEB APPLICATION SETTINGS
# ============================================================================

# Flask Environment: development or production
FLASK_ENV=development

# Flask Host (0.0.0.0 = accessible from network)
FLASK_HOST=0.0.0.0

# Flask Port
FLASK_PORT=5000

# Flask Secret Key (change in production!)
# Generate: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=dev-secret-key-change-in-production

# Flask Debug Mode (only development!)
FLASK_DEBUG=1

# ============================================================================
# DATABASE SETTINGS
# ============================================================================

# Database Type: sqlite or postgresql
DATABASE_TYPE=sqlite

# SQLite Database File Path (when DATABASE_TYPE=sqlite)
DATABASE_SQLITE_PATH=modbus_data.db

# PostgreSQL Connection String (when DATABASE_TYPE=postgresql)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/modbus_monitor

# Database Pool Size (for connection pooling)
DATABASE_POOL_SIZE=10

# Data Retention Days (auto-cleanup older records)
DATA_RETENTION_DAYS=30

# ============================================================================
# LOGGING SETTINGS
# ============================================================================

# Log Level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Log Directory
LOG_DIR=logs

# Log File Prefix
LOG_PREFIX=modbus_monitor

# Max Log File Size (MB)
LOG_MAX_BYTES=10

# Number of Backup Log Files to Keep
LOG_BACKUP_COUNT=7

# ============================================================================
# ALERT SETTINGS
# ============================================================================

# Enable Alerts
ENABLE_ALERTS=true

# Alert Check Interval (seconds)
ALERT_CHECK_INTERVAL=1

# Enable Desktop Notifications (Plyer)
ENABLE_DESKTOP_NOTIFICATIONS=true

# Enable Email Notifications
ENABLE_EMAIL_NOTIFICATIONS=false

# ============================================================================
# EMAIL SETTINGS (for alert notifications)
# ============================================================================

# SMTP Server
EMAIL_SMTP_SERVER=smtp.gmail.com

# SMTP Port (25, 587, 465)
EMAIL_SMTP_PORT=587

# SMTP Use TLS
EMAIL_SMTP_TLS=true

# Email From Address
EMAIL_FROM=your-email@gmail.com

# Email Password (use app-specific password for Gmail)
EMAIL_PASSWORD=your-app-password

# Email Recipient(s) - comma-separated
EMAIL_TO=admin@example.com,operator@example.com

# Email on Alert (test configuration)
EMAIL_TEST=false

# ============================================================================
# EXPORT SETTINGS
# ============================================================================

# Export Directory
EXPORT_DIR=exports

# Default Export Format: csv, excel, json
EXPORT_FORMAT=csv

# Include Headers in Export
EXPORT_HEADERS=true

# Export Date Format
EXPORT_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# ============================================================================
# API SETTINGS
# ============================================================================

# CORS Allowed Origins (comma-separated)
CORS_ORIGINS=*

# API Rate Limiting (requests per minute)
API_RATE_LIMIT=60

# ============================================================================
# SECURITY SETTINGS
# ============================================================================

# Enable HTTPS/SSL (for production)
ENABLE_SSL=false

# SSL Certificate Path (required if ENABLE_SSL=true)
SSL_CERT_PATH=/path/to/cert.pem

# SSL Key Path (required if ENABLE_SSL=true)
SSL_KEY_PATH=/path/to/key.pem

# ============================================================================
# PYQT6 DESKTOP APPLICATION SETTINGS
# ============================================================================

# Window Title
QT_WINDOW_TITLE=Modbus Monitor

# Default Window Width
QT_WINDOW_WIDTH=1200

# Default Window Height
QT_WINDOW_HEIGHT=800

# Enable Dark Theme
QT_DARK_THEME=true

# Chart History Points (how many data points to show)
QT_CHART_HISTORY=500

# Update Interval (ms)
QT_UPDATE_INTERVAL=500

# ============================================================================
# WEBSOCKET SETTINGS (for Dashboard)
# ============================================================================

# WebSocket Namespace
WEBSOCKET_NAMESPACE=/

# WebSocket Ping Interval (seconds)
WEBSOCKET_PING_INTERVAL=5

# WebSocket Ping Timeout (seconds)
WEBSOCKET_PING_TIMEOUT=10

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Enable Debug Mode
DEBUG=true

# Reload on Code Change
WERKZEUG_RUN_MAIN=true

# Enable Request Logging
DEBUG_LOG_REQUESTS=true
